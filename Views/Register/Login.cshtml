@model Login
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@{

}

<h1>LOGOWANKO</h1>

<div style="width:250px">
    <form method="post" asp-action="LoginAction" asp-controller="Register">
        <div>
            <label>Email:</label>
            <input type="text" asp-for="LoginEmail" class="form-control" />
        </div>

        <div>
            <label>Password:</label>
            <input type="password"  asp-for="LoginPassword" class="form-control" />
        </div><br />
        <button type="submit" class="btn btn-primary">Login</button>
        <div class="text-danger">
            @ViewBag.ErrorMessageLogin
        </div>
    </form>



</div>